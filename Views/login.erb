<div class ='containter'>
<form class="form-horizontal" action="login" method="post">
  <fieldset>
    <legend><h2>Login</h2></legend>
    <br>
    <div class="form-group">
      <label for="inputUsername" class="col-md-3 control-label">Username</label>
        <div class="col-md-5">
          <input type="text" class="form-control" id="inputUserName" name="username"  placeholder="Username">
        </div>
      </div>
    <div class="form-group">
      <label for="inputPass" class="col-md-3 control-label">Password</label>
        <div class="col-md-5">
          <input type="password" class="form-control" id="inputPass" name="password"  placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 col-md-offset-3">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </fieldset>
</form>
</div>
</div>
