
<div class = 'container'>
      <div class = 'clearfix' id='well'>
        <!-- <div class='page-header'> -->
          <div id='header1'>
          <img src="/images/clinkbeers.png" class="img-responsive" alt="Responsive image" id='clink'>
        </div>
        <div id="welcome">
          <h1 >Welcome to Alemanac<br><small>Search and save your favorite brews</small></h1>
        </div>
      </div>
    </div>


<!-- Age Verification -->
<div id='authentication' class='hidden' >
  <%= @is_not_authenticated %>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Age Verification</h4>
      </div>
      <div class="modal-body">
        <h5>This website contains information about alocholic beverages.</h5>
        <h5>Please verify your age.   Are you at least 21 years old?</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Yes</button>
        <button type="button" class="btn btn-primary">No</button>
      </div>
    </div>
  </div>
</div>


<form id="beerSearch" action="/" method="post">
  <div class="container"> <!-- all of form -->



    <div class="row">

      <div class="col-md-4">

        <!-- <button class="btn btn-default" type="button">Go!</button> -->

        <h3>Search for a beer term: </h3>
      </div>
        <div class="col-md-8">
        <div class="input-group">
          <input type="text" name="search_string" class="form-control" placeholder="Search for beer term...">

        </div>
      </div>
    </div>

    <!-- row -->

    <!-- <div class="col-md-6"></div> -->

    <div class="row" id="abv">  <!-- row with Choose by Style and ABV -->

      <div class="col-md-4">

        <h3>or Choose an ABV range:</h3>
      </div>
      <div class="col-md-8">
        <h3>
          <input type="text" name="min_abv" placeholder="0">
           to
           <input type="text" name="max_abv" placeholder="20">
        </h3>
      </div>
    </div>

    <div class="row"> <!-- dropdown row -->
      <div class="col-md-3">
        <h3>AND a style...</h3>
      </div>
      <div class="col-md-3"> <!-- dropdown column 1 -->
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Select a Category
              <span class="caret"></span>
            </button>
          <ul id="first-choice" class="dropdown-menu" aria-labelledby="dropdownMenu1">
             <li><a href="#">Select a Style Category</a></li>
             <li><a href="#">Belgian And French Origin Ales</a></li>
             <li><a href="#">British Origin Ales</a></li>
             <li><a href="#">European-germanic Lager</a></li>
             <li><a href="#">German Origin Ales</a></li>
             <li><a href="#">Hybrid-Mixed Beer</a></li>
             <li><a href="#">International Ale Styles</a></li>
             <li><a href="#">International Styles</a></li>
             <li><a href="#">Irish Origin Ales</a></li>
             <li><a href="#">Malternative Beverages</a></li>
             <li><a href="#">Mead Cider and Perry</a></li>
             <li><a href="#">North American Lager</a></li>
             <li><a href="#">North American Origin Ales</a></li>
             <li><a href="#">Other Lager</a></li>
             <li><a href="#">Other Origin</a></li>
          </ul>
        </div>
      </div> <!-- dropdown col 1 -->

      <div class="col-md-3"> <!-- dropdown column 1 -->
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Select a Style
            <span class="caret"></span>
          </button>
          <ul id="second-choice" class="dropdown-menu" aria-labelledby="dropdownMenu2">
          </ul>
        </div>
      </div> <!-- second dropdown column/empty form fields -->
      <div class="col-md-3">
        <input type="text" name="search_param" class="hidden" value="">
        <input type="number" name="pg_num" class="hidden" value="">
      </div>

    </div> <!-- dropdown row -->

    <div class="row">

      <div class="col-md-10">
        <button type="submit" class="btn btn-primary" name="name" value="Search" id="beerbutton">Get that beer!</button>
      </div>
      <div class="col-md-2 hidden">
          <input type="text" id="styleId" name="styleId" placeholder="23">
      </div>
    </div><!-- end row -->



  </div> <!-- /container -->
</form>
